# # -- Changing Window Focus --

# # change window focus within space
# ctrl + alt + shift + cmd - j : yabai -m window --focus south
# ctrl + alt + shift + cmd - k : yabai -m window --focus north
# ctrl + alt + shift + cmd - h : yabai -m window --focus west
# ctrl + alt + shift + cmd - l : yabai -m window --focus east

# # -- Modifying Window Size --

# # maximize a window
# ctrl + alt + shift + cmd - u : yabai -m window --toggle zoom-fullscreen

# # -- Starting/Stopping/Restarting Yabai --

# # stop/start/restart yabai
# ctrl + alt - q : brew services stop yabai
# ctrl + alt - s : brew services start yabai
# ctrl + alt - r : brew services restart yabai
