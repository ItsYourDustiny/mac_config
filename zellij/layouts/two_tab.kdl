layout {
    cwd "~/Dev/GitHub/app-workflow"
    tab name="Editor" focus=true {
        pane split_direction="vertical" {
            pane {
                    name "Terminal"
                    size "20%" 
            }
            pane {
                    name "Neovim" 
                    size "80%"
            } 
        }
        floating_panes {
            pane {
                name " "
                x "5%"
                y "5%"
                height "90%"
                width "90%"
                borderless true
            }
        }
    }

    tab name="Terminal" {
        pane split_direction="vertical" {
            pane {
                    name "Back End"
                    size "50%" 
            }
            pane {
                    name "Front End" 
                    size "50%"
            } 
        }
    }
}